{
  "name": "single-spa-demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-all": "npm run install:main && npm run install:navbar && npm run install:app1 && npm run install:app2 && npm run install:app3",
    "install:main": "yarn install",
    "install:navbar": "cd ./src/navbar/ && yarn install",
    "install:app1": "cd ./src/app1/ && yarn install",
    "install:app2": "cd ./src/app2/ && yarn install",
    "install:app3": "cd ./src/app3/ && yarn install",
    "prod": "NODE_ENV=production webpack --config webpack.prod.config.js  --display-used-exports --optimize-minimize",
    "dev": "NODE_ENV=development webpack-dev-server --config webpack.dev.config.js",
    "dev-server": "node webpack.dev.server.js",
    "dll": "NODE_ENV=production webpack --config webpack.dll.config.js",
    "dev:app1": "cd ./src/app1/ && yarn dev",
    "dev:app2": "cd ./src/app2/ && yarn dev",
    "dev:app3": "cd ./src/app3/ && yarn dev",
    "dev:navbar": "cd ./src/navbar/ && yarn dev",
    "dev:spa:app1": "cd ./src/app1/ && yarn dev:spa",
    "dev:spa:app2": "cd ./src/app2/ && yarn dev:spa",
    "dev:spa:app3": "cd ./src/app3/ && yarn dev:spa",
    "dev:spa:navbar": "cd ./src/navbar/ && yarn dev:spa",
    "dev:server": "cd ./server/ && yarn dev",
    "dev:all": "concurrently --kill-others --kill-others-on-fail -p name --names \"dev,server\" \"npm run dev\" \"npm run dev:server\"",
    "dev:spa:all": "concurrently --kill-others --kill-others-on-fail -p name --names \"navbar,app1,app2,app3\" \"npm run dev:spa:navbar\" \"npm run dev:spa:app1\" \"npm run dev:spa:app2\" \"npm run dev:spa:app3\"",
    "prod:spa:app1": "cd ./src/app1/ && yarn prod:spa && cp -f dist/* ../../dist/app1",
    "prod:spa:app2": "cd ./src/app2/ && yarn prod:spa && cp -f dist/* ../../dist/app2",
    "prod:spa:app3": "cd ./src/app3/ && yarn prod:spa && cp -f dist/* ../../dist/app3",
    "prod:spa:navbar": "cd ./src/navbar/ && yarn prod:spa && cp -f dist/* ../../dist/navbar",
    "prod:spa:all": "yarn prod:spa:navbar && yarn prod:spa:app1 &&yarn prod:spa:app2 &&yarn prod:spa:app3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "single-spa": "^4.3.6",
    "systemjs": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^4.1.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "electron": "^5.0.6",
    "electron-packager": "^14.0.1",
    "express": "^4.17.1",
    "express-history-api-fallback": "^2.2.1",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  }
}
